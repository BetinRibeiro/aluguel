                {{elif contrato.dia_vencimento==7:}}07 (SETE)
                {{elif contrato.dia_vencimento==8:}}08 (OITO)
                {{elif contrato.dia_vencimento==9:}}09 (NOVE)
                {{elif contrato.dia_vencimento==10:}}10 (DEZ)
                {{elif contrato.dia_vencimento==11:}}11 (ONZE)
